@{
    ViewData["Title"] = "Saç Modeli Önerisi";
}

<h1>Saç Modeli Önerisi</h1>

<form method="post" enctype="multipart/form-data" action="@Url.Action("GetResult", "GPTApi")">
    <label for="file">Yüz ve Saç Görselinizi Yükleyin:</label><br />
    <input type="file" name="file" id="file" accept="image/*" /><br /><br />
    <button type="submit">Görsel Yükle</button>
</form>

@if (ViewBag.ImagePreview != null)
{
    <h3>Yüklenen Görsel:</h3>
    <img src="@ViewBag.ImagePreview" alt="Yüklenen Görsel" style="max-width: 200px;" />

    <h3>GPT'nin Yanıtı:</h3>
    <p>@ViewBag.Response</p>
}

@if (ViewBag.Response == null && ViewBag.ImagePreview == null)
{
    <h3>Bir görsel yükleyerek saç modeli önerisi alabilirsiniz.</h3>
}
