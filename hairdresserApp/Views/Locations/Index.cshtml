@model List<HairdresserApp.Models.Location>
@{
	ViewData["Title"] = "Şubeler";
}

<h3>Şubeler</h3>

<a asp-action="Create">Yeni Şube Ekle</a>

<table class="table">
	<thead>
		<tr>
			<th>Ad</th>
			<th>Adres</th>
			<th>Çalışan Sayısı</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var location in Model){
			<tr>
				<td>@location.Name</td>
				<td>@location.Address</td>
				<td>@location.Employees?.Count</td>
				<td>
					<a asp-action="Edit" asp-route-id="@location.Id">Düzenle</a>
					<a asp-action="Delete" asp-route-id="@location.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>