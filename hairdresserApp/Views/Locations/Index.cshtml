@model List<HairdresserApp.Models.Location>
@{
	ViewData["Title"] = "Şubeler";
}

<br />
<h3>ŞUBELER</h3>

<div class="d-flex justify-content-end mb-3">
	<a class="btn btn-sm btn-primary" asp-action="Create">Yeni Şube Ekle</a>
</div>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Açıklama</th>
			<th>Adres</th>
			<th>Çalışma Saatleri</th>
			<th>Personel Sayısı</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var location in Model){
			<tr>
				<td>@location.Name</td>
				<td>@location.Address</td>
				<td>@location.OpeningTime.ToString(@"hh\:mm") - @location.ClosingTime.ToString(@"hh\:mm")</td>
				<td>@location.Employees?.Count</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@location.Id">Düzenle</a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@location.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>