@model List<HairdresserApp.Models.Appointment>
@{
	ViewData["Title"] = "Randevular";
}

<h3>Randevular</h3>

<a asp-action="Create">Yeni Randevu Ekle</a>

<table class="table">
	<thead>
		<tr>
			<th>Oluşturma Zamanı</th>
			<th>Hizmeti Alacak Kişi</th>
			<th>Randevu Zamanı</th>
			<th>Hizmet</th>
			<th>Şube</th>
			<th>Hizmeti Verecek Kişi</th>
			<th>Onay</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var appointment in Model)
		{
			<tr>
				<td>@appointment.CreatedDate</td>
				<td>@appointment.User.FirstName @appointment.User.LastName<br>@appointment.User.Email</td>
				<td>@appointment.AppointmentDate</td>
				<td>@appointment.Service.Name<br>@appointment.Service.ProcessTimeInMinutes dk<br>@appointment.Service.Price TL</td>
				<td>@appointment.Employee.Location.Name</td>
				<td>@appointment.Employee.FirstName @appointment.Employee.LastName</td>
				<td>@appointment.Confirmed</td>
				<td>
					<a asp-action="Confirmation" asp-route-id="@appointment.Id">Onay</a>
					<a asp-action="Edit" asp-route-id="@appointment.Id">Düzenle</a>
					<a asp-action="Delete" asp-route-id="@appointment.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>