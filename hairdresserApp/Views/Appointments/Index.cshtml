@model List<HairdresserApp.Models.Appointment>
@{
	ViewData["Title"] = "Randevular";
}

<h3>Randevular</h3>

<a asp-action="Create">Yeni Randevu Ekle</a>

<table class="table">
	<thead>
		<tr>
			<th>Id</th>
			<th>Müşteri</th>
			<th>Müşteri Email</th>
			<th>Hizmet Verilecek Şube</th>
			<th>Hizmet Verecek Çalışan</th>
			<th>Hizmet</th>
			<th>Hizmet Ücreti</th>
			<th>Randevu Saati</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var appointment in Model){
			<tr>
				<td>@appointment.Id</td>
				<td>@appointment.User.FirstName @appointment.User.LastName</td>
				<td>@appointment.User.Email</td>
				<td>@appointment.Location.Name</td>
				<td>@appointment.Employee.FirstName @appointment.Employee.LastName</td>
				<td>@appointment.Service.Name</td>
				<td>@appointment.Service.Price</td>
				<td>@appointment.StartTime - @appointment.EndTime</td>
				<td>
				
				</td>
			</tr>
		}
	</tbody>
</table>