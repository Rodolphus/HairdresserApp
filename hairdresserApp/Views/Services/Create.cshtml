@model HairdresserApp.Models.Service
@{
	ViewData["Title"] = "Hizmet Ekle";
}

<br />
<h3>HİZMET EKLE</h3>
<br />

<form asp-action="Create" method="post">
	<div class="form-group mb-2">
		<label for="Name">Açıklama</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="form-group mb-2">
		<label for="Price">Fiyat</label>
		<input type="number" class="form-control" asp-for="Price" />
	</div>
	<div class="form-group mb-3">
		<label for="ProcessTimeInMinutes">Süre</label>
		<input type="number" class="form-control" asp-for="ProcessTimeInMinutes" min="30" step="30" />
	</div>
	<button type="submit" class="btn btn-primary">Ekle</button>
	<a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>