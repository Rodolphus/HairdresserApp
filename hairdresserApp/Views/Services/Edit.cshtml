@model HairdresserApp.Models.Service
@{
	ViewData["Title"] = "Hizmet Düzenle";
}

<br />
<h3>HİZMET DÜZENLE</h3>
<br />

<form asp-action="Edit" method="post">
	<div class="form-group mb-2">
		<label for="Name">Açıklama</label>
		<input type="text" class="form-control" asp-for="Name" />
	</div>
	<div class="form-group mb-2">
		<label for="Price">Fiyat</label>
		<input type="number" class="form-control" asp-for="Price" />
	</div>
	<div class="form-group mb-3">
		<label for="ProcessTimeInMinutes">Süre</label>
		<input type="number" class="form-control" asp-for="ProcessTimeInMinutes" />
	</div>
	<button type="submit" class="btn btn-primary">Düzenle</button>
	<a asp-action="Index" class="btn btn-secondary">İptal</a>
</form>