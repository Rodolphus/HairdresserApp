@model List<HairdresserApp.Models.Service>
@{
	ViewData["Title"] = "Hizmetler";
}

<h3>Hizmetler</h3>

<a asp-action="Create">Yeni Hizmet Ekle</a>

<table class="table">
	<thead>
		<tr>
			<th>Hizmet</th>
			<th>Fiyat</th>
			<th>Hizmet Süresi</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var service in Model){
			<tr>
				<td>@service.Name</td>
				<td>@service.Price TL</td>
				<td>@service.ProcessTimeInMinutes dk</td>
				<td>
					<a asp-action="Edit" asp-route-id="@service.Id">Düzenle</a>
					<a asp-action="Delete" asp-route-id="@service.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>