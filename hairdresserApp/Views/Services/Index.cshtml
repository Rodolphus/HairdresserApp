@model List<HairdresserApp.Models.Service>
@{
	ViewData["Title"] = "Hizmetler";
}

<br />
<h3>HİZMETLER</h3>

<div class="d-flex justify-content-end mb-3">
	<a class="btn btn-sm btn-primary" asp-action="Create">Yeni Hizmet Ekle</a>
</div>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Açıklama</th>
			<th>Süre</th>
			<th>Fiyat</th>
			<th>Personeller</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var service in Model){
			<tr>
				<td>@service.Name</td>
				<td>@service.ProcessTimeInMinutes dk</td>
				<td>@service.Price TL</td>
				<td>
					@foreach (var employee in service.EmployeeServices)
					{
						@($"{employee.Employee.FirstName} {employee.Employee.LastName} ")
					}
				</td>
				<td>
					<a class="btn btn-sm btn-primary"  asp-action="Edit" asp-route-id="@service.Id">Düzenle</a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@service.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>