@model List<HairdresserApp.Models.Employee>
@{
	ViewData["Title"] = "Çalışanlar";
}

<h3>Çalışanlar</h3>

<a asp-action="Create">Yeni Çalışan Ekle</a>

<table class="table">
	<thead>
		<tr>
			<th>Ad Soyad</th>
			<th>Şube</th>
			<th>Verdiği Hizmetler</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model){
			<tr>
				<td>@employee.FirstName @employee.LastName</td>
				<td>@employee.Location?.Name</td>
				<td>
					@foreach(var service in employee.EmployeeServices){
						@service.Service.Name
					}
				</td>
				<td>
					<a asp-action="Edit" asp-route-id="@employee.Id">Düzenle</a>
					<a asp-action="Delete" asp-route-id="@employee.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>