@model List<HairdresserApp.Models.Employee>
@{
	ViewData["Title"] = "Çalışanlar";
}

<br />
<h3>PERSONELLER</h3>

<div class="d-flex justify-content-end mb-3">
	<a class="btn btn-sm btn-primary" asp-action="Create">Yeni Personel Ekle</a>
</div>

<table class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Ad Soyad</th>
			<th>Şube</th>
			<th>Hizmetler</th>
			<th>İşlemler</th>
		</tr>
	</thead>
	<tbody>
		@foreach(var employee in Model){
			<tr>
				<td>@employee.FirstName @employee.LastName</td>
				<td>@employee.Location?.Name</td>
				<td>
					@foreach(var service in employee.EmployeeServices)
					{
						@($"{service.Service.Name} ")
					}
				</td>
				<td>
					<a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@employee.Id">Düzenle</a>
					<a class="btn btn-sm btn-danger" asp-action="Delete" asp-route-id="@employee.Id">Sil</a>
				</td>
			</tr>
		}
	</tbody>
</table>